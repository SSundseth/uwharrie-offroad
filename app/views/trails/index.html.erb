<h1>Trails</h1>
<div class="trail-map">
  <ul id="topo-map">
    <% @trails.each do |t| %>
      <li id=<%= "#{t.name}".downcase.gsub(/\s|\./, '_') %>><%= link_to t.name, t %></li>
    <% end %>
  </ul>
  Image copyrighted by Southeast Overland LLC. All rights reserved.
</div>


<p>
  <ul id="trail-list">
    <% @trails.each do |t| %>
      <li class="trails"><%= link_to t.name, t %></li><br />
    <% end %>
  </ul>
</p>
